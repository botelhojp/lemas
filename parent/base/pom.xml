<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>lesma.parent</groupId>
	<artifactId>lesma-parent-base</artifactId>
	<version>1.0.0-BETA-02-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Lesma - Parent Base</name>
	<url>https://github.com/botelhojp/lesma</url>

	<properties>
		<encoding.default>UTF-8</encoding.default>
		<lesma.release.version>1.0.0-BETA-02-SNAPSHOT</lesma.release.version>
	</properties>

	<licenses>
		<license>
			<name>GNU Lesser General Public License, Version 3</name>
			<url>http://www.gnu.org/licenses/lgpl-3.0.txt</url>
		</license>
	</licenses>

	<repositories>
		<repository>
			<id>ibiblio</id>
			<url>http://mirrors.ibiblio.org/pub/mirrors/maven2</url>
		</repository>
		<repository>
			<id>ppgia.releases</id>
			<url>http://www.ppgia.pucpr.br/~vanderson/repositories/internal</url>
		</repository>
		<repository>
			<id>ppgia.snapshots</id>
			<url>http://www.ppgia.pucpr.br/~vanderson/repositories/snapshots</url>
		</repository>
		<repository>
			<id>sonatype-nexus-releases</id>
			<name>Sonatype Nexus Releases</name>
			<url>https://oss.sonatype.org/content/repositories/releases</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>

			<!-- Jade -->
			<dependency>
				<groupId>jade</groupId>
				<artifactId>jade</artifactId>
				<version>4.5</version>
			</dependency>

			<!-- Open Jade -->
			<dependency>
				<groupId>openj</groupId>
				<artifactId>openj-framework</artifactId>
				<version>1.1.0</version>
			</dependency>

			<!-- Lesma -->
			<dependency>
				<groupId>lesma.model</groupId>
				<artifactId>lesma-trustmodel-direct</artifactId>
				<version>${lesma.release.version}</version>
			</dependency>

			<dependency>
				<groupId>lesma</groupId>
				<artifactId>lesma-annotations</artifactId>
				<version>${lesma.release.version}</version>
			</dependency>

			<!-- Certificate -->
			<dependency>
				<groupId>org.bouncycastle</groupId>
				<artifactId>bcprov-jdk15on</artifactId>
				<version>1.47</version>
			</dependency>

			<dependency>
				<groupId>org.bouncycastle</groupId>
				<artifactId>bcmail-jdk15on</artifactId>
				<version>1.47</version>
			</dependency>

			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>1.1</version>
			</dependency>

			<!-- Commons -->
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>1.2.14</version>
			</dependency>

			<!-- Gui -->
			<dependency>
				<groupId>jfreechart</groupId>
				<artifactId>jfreechart</artifactId>
				<version>1.0.0</version>
			</dependency>

			<!-- Tests -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.5</version>
				<scope>test</scope>
			</dependency>

			<!-- Utils -->
			<dependency>
				<groupId>org.reflections</groupId>
				<artifactId>reflections</artifactId>
				<version>0.9.9-RC1</version>
			</dependency>

			<dependency>
				<groupId>stax</groupId>
				<artifactId>stax-api</artifactId>
				<version>1.0.1</version>
			</dependency>
		</dependencies>


	</dependencyManagement>

	<distributionManagement>
		<repository>
			<id>ppgia.internal</id>
			<name>Repositorio Interno</name>
			<url>scp://hercules.ppgia.pucpr.br/home2/doutorado/2013/vanderson/public_html/repositories/internal</url>
		</repository>
		<snapshotRepository>
			<id>ppgia.snapshots</id>
			<name>Repositorio Interno</name>
			<url>scp://hercules.ppgia.pucpr.br/home2/doutorado/2013/vanderson/public_html/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0-beta-9</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<encoding>${encoding.default}</encoding>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
